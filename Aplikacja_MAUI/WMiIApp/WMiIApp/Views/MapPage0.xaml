            <CollectionView x:Name="destinationRoomListView" SelectionMode="Single" SelectionChanged="OnDestinationRoomListViewSelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10">
                            <Label Text="{Binding .}" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Wyczyść trasę" Clicked="OnClearRouteClicked" Margin="5"/>
            <Button Text="Wyznacz trasę" Clicked="OnCalculateRouteClicked" Margin="5"/>
