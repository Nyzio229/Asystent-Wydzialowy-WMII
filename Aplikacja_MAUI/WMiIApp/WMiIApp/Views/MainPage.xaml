<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WMiIApp.MainPage"
             xmlns:viewmodel="clr-namespace:WMiIApp.ViewModels"
             x:DataType="viewmodel:MainViewModel">

    <Grid RowDefinitions="*, Auto" ColumnDefinitions=".75*, .25*"
          RowSpacing="10" ColumnSpacing="0" >
        <CollectionView Grid.ColumnSpan="4" VerticalOptions="End" ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type x:String}">
                    <Grid Padding="5,5">
                        <Frame>
                            <Label Text="{Binding .}" FontSize="14"/>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Entry Placeholder="Wpisz wiadomość" Text="{Binding Text}" Grid.Row="1"/>
        <Button Text="Wyślij" Grid.Row="1" Grid.Column="1" Command="{Binding AddCommand}"/>

    </Grid>

</ContentPage>
